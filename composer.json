{
  "name": "ucdavis/sitefarm-acquia",
  "description": "Drupal 8 SiteFarm distribution for Acquia hosting.",
  "type": "project",
  "license": "GPL-2.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "behat/behat": "^3.1",
    "drupal/drupal-extension": "^3.1",
    "drush/drush": "8.*",
    "behat/mink": "~1.6",
    "behat/mink-goutte-driver": "~1.2",
    "behat/mink-extension": "*",
    "behat/mink-selenium2-driver": "*",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "symfony/css-selector": "2.7.*"
  },
  "require": {
    "composer/installers": "^1.0",
    "drupal-composer/drupal-scaffold": "^1.2",
    "cweagans/composer-patches": "^1.5",
    "ucdavis/sitefarm": "dev-8.x-1.x",
    "drupal/acquia_connector": "8.*",
    "drupal/acsf": "8.*",
    "drupal/clamav": "8.*",
    "drupal/mollom": "8.*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/sitefarm.git"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/sitefarm-theme-one.git"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/aggiefeed-drupal-module.git"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "cp -a web/profiles/sitefarm/libraries/. web/libraries/"
    ],
    "post-update-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "cp -a web/profiles/sitefarm/libraries/. web/libraries/"
    ]
  },
  "config": {
    "bin-dir": "bin/",
    "preferred-install": {
      "drupal/*": "dist"
    }
  },
  "extra": {
    "installer-paths": {
      "web/core": [
        "drupal/core"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "web/profiles/{$name}": [
        "type:drupal-profile"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "patches": {
      "drupal/core": {
        "fix config directory file permissions": "https://www.drupal.org/files/issues/2783749-16.patch"
      }
    },
    "enable-patching": true
  }
}
