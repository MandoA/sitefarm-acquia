{
  "name": "ucdavis/sitefarm-acquia",
  "description": "Drupal 8 SiteFarm distribution for Acquia hosting.",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "Regents of the University of California",
      "email": "copyright@ucdavis.edu",
      "role": "Copyright Owner"
    },
    {
      "name": "Shawn DeArmond",
      "email": "sgdearmond@ucdavis.edu",
      "role": "Developer"
    },
    {
      "name": "Mark Miller",
      "email": "mrkmiller@ucdavis.edu",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "behat/behat": "^3.1",
    "drupal/drupal-extension": "^3.1",
    "behat/mink": "~1.6",
    "behat/mink-goutte-driver": "~1.2",
    "behat/mink-extension": "*",
    "behat/mink-selenium2-driver": "*",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "drupal/console": "~1.0"
  },
  "require": {
    "drupal/core": "^8.4",
    "composer/installers": "^1.0",
    "drupal-composer/drupal-scaffold": "^2.2",
    "zendframework/zend-stdlib": "~3.0.1",
    "cweagans/composer-patches": "^1.5",
    "ucdavis/sitefarm": "dev-8.x-3.x",
    "ucdavis/sitefarm_one": "dev-8.x-3.x",
    "drupal/acquia_connector": "1.*",
    "drupal/acsf": "1.*",
    "drupal/samlauth": "2.*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/sitefarm.git"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/aggiefeed-drupal-module.git"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/sitefarm-theme-one.git"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "Sitefarm\\Composer\\Assets::rename",
      "rm docroot/robots.txt"
    ],
    "post-update-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "Sitefarm\\Composer\\Assets::rename",
      "rm docroot/robots.txt"
    ]
  },
  "config": {
    "preferred-install": {
      "drupal/*": "dist"
    }
  },
  "extra": {
    "installer-types": [
      "bower-asset",
      "npm-asset"
    ],
    "installer-paths": {
      "docroot/core": [
        "drupal/core"
      ],
      "docroot/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "docroot/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "docroot/profiles/{$name}": [
        "type:drupal-profile"
      ],
      "docroot/libraries/{$name}": [
        "type:drupal-library",
        "type:bower-asset",
        "type:npm-asset"
      ],
      "docroot/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "docroot/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "enable-patching": true
  },
  "autoload": {
    "psr-4": {
      "Sitefarm\\": "src"
    }
  }
}
