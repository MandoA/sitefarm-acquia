{
  "name": "ucdavis/sitefarm-acquia",
  "description": "Drupal 8 SiteFarm distribution for Acquia hosting.",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "Regents of the University of California",
      "email": "copyright@ucdavis.edu",
      "role": "Copyright Owner"
    },
    {
      "name": "Shawn DeArmond",
      "email": "sgdearmond@ucdavis.edu",
      "role": "Developer"
    },
    {
      "name": "Mark Miller",
      "email": "mrkmiller@ucdavis.edu",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "behat/behat": "^3.1",
    "drupal/drupal-extension": "^3.1",
    "drush/drush": "8.*",
    "behat/mink": "~1.6",
    "behat/mink-goutte-driver": "~1.2",
    "behat/mink-extension": "*",
    "behat/mink-selenium2-driver": "*",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "drupal/console": "~1.0"
  },
  "require": {
    "composer/installers": "^1.0",
    "drupal-composer/drupal-scaffold": "^2.2",
    "zendframework/zend-stdlib": "~3.0.1",
    "cweagans/composer-patches": "^1.5",
    "ucdavis/sitefarm": "dev-8.x-1.x",
    "drupal/acquia_connector": "1.*",
    "drupal/acsf": "1.*",
    "drupal/clamav": "1.*",
    "drupal/mollom": "1.*",
    "drupal/samlauth": "2.*"
  },
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "ucdavis/sitefarm": {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/sitefarm.git"
    },
    "ucdavis/aggiefeed": {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/aggiefeed-drupal-module.git"
    },
    "ucdavis/sitefarm_one": {
      "type": "vcs",
      "url": "git@bitbucket.org:ietwebdev/sitefarm-theme-one.git"
    }

  },
  "scripts": {
    "post-install-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "cp -a docroot/profiles/sitefarm/libraries/. docroot/libraries/"
    ],
    "post-update-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "cp -a docroot/profiles/sitefarm/libraries/. docroot/libraries/"
    ]
  },
  "config": {
    "preferred-install": {
      "drupal/*": "dist"
    }
  },
  "extra": {
    "installer-paths": {
      "docroot/core": [
        "drupal/core"
      ],
      "docroot/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "docroot/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "docroot/profiles/{$name}": [
        "type:drupal-profile"
      ],
      "docroot/libraries/{$name}": [
        "type:drupal-library"
      ],
      "docroot/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "docroot/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "enable-patching": true,
    "patches": {
      "drupal/core": {
        "datetime-range views enhancements": "https://www.drupal.org/files/issues/improve_the_views-2786577-28.patch",
        "multiple image upload dimension fix": "https://www.drupal.org/files/issues/multiple_upload_at_once-2644468-66.patch",
        "Drupalimage calling drupallink functions without checking if the plugin is loaded fix": "https://www.drupal.org/files/issues/edit_drupalimage-2855521-1.patch"
      }
    }
  }
}
